{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ExploraLire",
  "version": "0.0.1",
  "identifier": "fr.sydher.edu.exploralire",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "ExploraLire",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/*"
    ],
    "windows": {
      "nsis": null
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
